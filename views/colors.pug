extends index
block colors
  main.main__content
  
    each color in colors
      .color
        p.color__title
          | #{color.title}
        .color__container
          .color__shape(style='background-image: linear-gradient(to bottom, #' + `${color.colors[0]}` + ',#' + `${color.colors[1]}` + ')')
          .color__side
            .color__hexcodes
              span.color__hexcode(onmouseover='colorMouseOver(this);' onmouseout='colorMouseOut(this);' onclick='colorMouseClick(this);') #{color.colors[0]}
              span.color__hexcode(onmouseover='colorMouseOver(this);' onmouseout='colorMouseOut(this);' onclick='colorMouseClick(this);') #{color.colors[1]}
            .color__side--divider
            .color__likes.scale
              img(src='../img/likes.svg' alt='Likes icon' class='like')
            .color__side--divider
            .color__downloads.scale
              img(src='../img/download.svg' alt='Download icon')